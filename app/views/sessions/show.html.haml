.row
  .span6
    %h1
      = @user.name
      %small
        = "@#{@user.screen_name}"
    - unless @user.description.blank?
      %h6
        = @user.description
.row 
  .span6.offset2
    #todo-container
      #app
      #todo
.row
  .span2
  = form_tag(signout_path, :method => 'delete') do
    %fieldset
      .form-actions
        %button.btn.btn-danger#sign_out
          = t("button.sign_out")

